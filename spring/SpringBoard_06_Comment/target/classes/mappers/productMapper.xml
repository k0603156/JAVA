<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ProductMapper">
<sql id="cri">
<if test="type != null">
<trim prefix=" and (" suffix=")">
	<choose>
		<when test="type == 'TCW'.toString()">
			title like '%'||#{keyword}||'%' or 
			content like '%'||#{keyword}||'%' or
			writer like '%'||#{keyword}||'%'			
		</when>
		<when test="type == 'TC'.toString()">
			title like '%'||#{keyword}||'%' or 
			content like '%'||#{keyword}||'%'			
		</when>
		<when test="type == 'TW'.toString()">
			title like '%'||#{keyword}||'%' or			
			writer like '%'||#{keyword}||'%'			
		</when>
		<when test="type == 'CW'.toString()">
			content like '%'||#{keyword}||'%' or
			writer like '%'||#{keyword}||'%'			
		</when>
		<when test="type == 'T'.toString()">
			title like '%'||#{keyword}||'%'			
		</when>
		<when test="type == 'C'.toString()">
			content like '%'||#{keyword}||'%'			
		</when>
		<when test="type == 'W'.toString()">
			writer like '%'||#{keyword}||'%'			
		</when>
	</choose>
	</trim>
</if>
</sql>
	<sql id="pno_cond">
		where pno = #{pno}
	</sql>
	<select id="total" resultType="java.lang.Integer" parameterType="cri">
		select count(pno) from tbl_product where pno > 0
		<include refid="cri" />
	</select>
	<update id="rmImg" parameterType="java.util.HashMap">
		update tbl_product set imgfile = #{imgfile}
		<include refid="pno_cond" />
	</update>
	<insert id="add" parameterType="pvo">
		insert into tbl_product
		values(seq_product.nextval,
		#{title},#{content},#{writer},
		sysdate,sysdate,0,#{imgfile})
	</insert>
	<select id="list" resultType="pvo" parameterType="cri">
	<![CDATA[
		SELECT pno, title, writer,content,readcount, modd8 FROM
		(SELECT /*+INDEX_DESC(tbl_product tbl_product_pk)*/
			rownum rn, pno, title, writer,content, readcount, modd8 
			FROM TBL_PRODUCT WHERE pno > 0
	]]>
		<include refid="cri" />
	<![CDATA[		
			 and rownum <= #{pageNum}*#{amount})
		WHERE rn > (#{pageNum}-1)*#{amount}
	 ]]>
	</select>
	<select id="detail" parameterType="java.lang.Integer"
		resultType="pvo">
		select * from tbl_product
		<include refid="pno_cond" />
	</select>
	<update id="modify" parameterType="pvo">
		update tbl_product set
		title = #{title}, content = #{content}, modd8 =
		sysdate, imgfile = #{imgfile}
		<include refid="pno_cond" />
	</update>
	<delete id="remove" parameterType="java.lang.Integer">
		delete from tbl_product
		<include refid="pno_cond" />
	</delete>
</mapper>